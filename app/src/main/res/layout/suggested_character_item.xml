<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardBackground"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/suggested_character_image_view"
        android:minWidth="64dp"
        android:minHeight="64dp"
        android:background="@color/colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Noah Pederson"
        android:id="@+id/suggested_character_name_text_view"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/suggested_character_image_view"
        android:layout_toEndOf="@+id/suggested_character_image_view"
        android:paddingLeft="16dp"
        android:textColor="@color/colorTextPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SOME REALLY REALLY LONG PLACEHOLDER NAME"
        android:id="@+id/suggested_character_source_text_view"
        android:textColor="@color/colorTextPrimary"
        android:paddingLeft="16dp"
        android:layout_below="@+id/suggested_character_name_text_view"
        android:layout_toRightOf="@+id/suggested_character_image_view"
        android:layout_toEndOf="@+id/suggested_character_image_view"
        android:singleLine="false" />
</RelativeLayout>